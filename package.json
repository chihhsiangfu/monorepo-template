{
  "name": "monorepo-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "clean": "turbo clean",
    "lint": "pnpm dlx ultracite fix",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "check-types": "turbo check-types",
    "hard-clean": "git clean -fdx"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.5",
    "typescript": "catalog:",
    "ultracite": "7.0.12",
    "vitest": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "overrides": {
      "zod": "4.3.6"
    }
  }
}
