{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "check-types": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:html": "open coverage/index.html",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "better-auth:generate-db": "npx @better-auth/cli@latest generate",
    "better-auth:migrate-db": "npx @better-auth/cli@latest migrate",
    "local:db:reset": "pnpm run db:generate && pnpm run local:db:delete && pnpm run local:db:migrate && pnpm run local:db:seed",
    "local:db:delete": "rm -rf ./pglite-db",
    "local:db:migrate": "tsx scripts/migrate-db.ts",
    "local:db:seed": "tsx scripts/seed-db.ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@hono/node-server": "^1.19.9",
    "@orpc/client": "^1.13.4",
    "@orpc/server": "^1.13.4",
    "axios": "^1.13.2",
    "better-auth": "^1.4.17",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.5",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "^4.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
